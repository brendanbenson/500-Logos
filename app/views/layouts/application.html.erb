<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">

  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  
  <title><%= title %></title>
  <meta name="description" content="<%= @description %>">

  <meta name="viewport" content="width=device-width,initial-scale=1">

  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "mobile", :media => "handheld" %>
  <%= csrf_meta_tag %>
</head>
<body>
<!--Facebook Javascript SDK-->
  <div id="fb-root"></div>
  <script>
  	window.fbAsyncInit = function() {
    FB.init({
      appId      : '131496953620376', // App ID
      channelURL : '//500logos.com/channel.html', // Channel File
      status     : true, // check login status
      cookie     : true, // enable cookies to allow the server to access the session
      oauth      : true, // enable OAuth 2.0
      xfbml      : true  // parse XFBML
    });
  };

  // Load the SDK Asynchronously
  (function(d){
     var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
     js = d.createElement('script'); js.id = id; js.async = true;
     js.src = "//connect.facebook.net/en_US/all.js";
     d.getElementsByTagName('head')[0].appendChild(js);
   }(document));
  </script>
<div id="container">
    <header>
		<%= render 'layouts/header' %>
    </header>
    <div id="main" role="main">
        <% if flash[:success] %>
          <p class="success"><%= flash[:success] %></p>
        <% end %>
      <% if flash[:error] %>
        <p class="error"><%= flash[:error] %></p>
      <% end %>
		<%= yield %>
	</div>
    <footer>
      <%=  render 'layouts/footer' %>
    </footer>
    <%=
    	#debug(params) if Rails.env.development?
    %>
</div> <!--! end of #container -->


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>

  <%= javascript_include_tag "plugins.js" %>
  <%= javascript_include_tag "script.js" %>

    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2399887-17']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
  <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
  <![endif]-->
</body>
</html>
